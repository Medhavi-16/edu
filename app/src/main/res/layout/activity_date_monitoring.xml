<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".date_monitoring">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/aclonica">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/stylish"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:text="Select Date"
                android:layout_weight="2">

            </TextView>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:id="@+id/date_monitoring_spinner"
                android:layout_margin="20dp"
                android:layout_weight="1"
                >

            </Spinner>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher and Management Schedule"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/aclonica">
    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Management"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/pacifico"
                    android:textSize="25dp"
                    android:gravity="center_horizontal"
                    >

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_monitoring_management_name1"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/stylish"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amit"
                        >

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/date_monitoring_management_name2"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/stylish"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Divyansh"
                        >

                    </TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Teacher"
                    android:fontFamily="@font/pacifico"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    >

                </TextView>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_monitoring_listview">

                </ListView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>