<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".action_screen"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="@font/rock_salt"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Student Gyan Movement"
                android:textColor="@color/colorPrimary"
                android:textSize="33dp">

            </TextView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white"
                android:stateListAnimator="@animator/card">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/flipper">

            </ViewFlipper>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/give_you_glory"
                android:text="About SGM"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="50dp"

                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white"
                android:stateListAnimator="@animator/card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/sgm_logo">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:text="SGM is a forum which took responsibility to help and guide underprivileged children in their education, one of the basic rights of every child. MORE"
                    android:textStyle="bold"
                    android:fontFamily="@font/stylish"
                    android:gravity="center"
                    android:textSize="15dp">

                </TextView>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="General Features"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:fontFamily="@font/give_you_glory"
                android:textStyle="bold">
            </TextView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="20dp"
                    app:cardBackgroundColor="@color/white"
                    android:stateListAnimator="@animator/card">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/schedule_viewer"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/amatica_sc_bold"
                                android:gravity="center"
                                android:text="Schedule"
                                android:textColor="@color/buttonred"
                                android:textSize="30dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/stylish"
                                android:gravity="center"
                                android:text="Day to Day Responsibility of Teacher as well as Management Team."
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:rippleColor="@color/background"
                    android:layout_weight="1"
                    android:id="@+id/action_schedule"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="20dp"
                    android:stateListAnimator="@animator/card"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/list_teacher"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="List of Members"
                                android:gravity="center"
                                android:textColor="@color/buttonred"
                                android:layout_margin="5dp"

                                android:fontFamily="@font/amatica_sc_bold"
                                android:textSize="30dp"
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:fontFamily="@font/stylish"
                                android:textSize="15dp"
                                android:layout_margin="5dp"
                                android:text="Detailed Information About, All The Members of SGM Family."
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Member Features"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/give_you_glory"
                android:textStyle="bold">
            </TextView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            android:stateListAnimator="@animator/card"

            app:rippleColor="@color/background"
            android:id="@+id/management"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/teacher1"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:gravity="center"
                        android:textColor="@color/buttonred"
                        android:layout_margin="5dp"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:id="@+id/login_text"
                        android:fontFamily="@font/amatica_sc_bold">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/stylish"
                        android:textSize="15dp"
                        android:layout_margin="5dp"
                        android:text="All The Member Required To Login With Their Respective Email and SGM ID."
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Activities"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/give_you_glory"
                android:textStyle="bold">
            </TextView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp"
                android:stateListAnimator="@animator/card"
                app:rippleColor="@color/background"
                android:id="@+id/Sunday_activity"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/teacher1"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunday Activity"
                            android:gravity="center"
                            android:textColor="@color/buttonred"
                            android:layout_margin="5dp"
                            android:textSize="30dp"
                            android:fontFamily="@font/amatica_sc_bold"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/stylish"
                            android:textSize="15dp"
                            android:layout_margin="5dp"
                            android:text="All The Member Required To Login With Their Respective Email and SGM ID."
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardCornerRadius="50dp"
                android:stateListAnimator="@animator/card"
                app:rippleColor="@color/background"
                android:id="@+id/other_event"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/teacher1"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event"
                            android:gravity="center"
                            android:textColor="@color/buttonred"
                            android:layout_margin="5dp"
                            android:textSize="30sp"
                            android:fontFamily="@font/amatica_sc_bold"
                            android:textStyle="bold">
                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/stylish"
                            android:textSize="15dp"
                            android:layout_margin="5dp"
                            android:text="All The Member Required To Login With Their Respective Email and SGM ID."
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>



</LinearLayout>