<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".action_screen"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Gyan \n Movement"
                android:layout_margin="15dp"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/berkshireswash"
                android:layout_gravity="center"
                android:gravity="center"
                >
            </TextView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white">

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/flipper">

            </ViewFlipper>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About SGM"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/aclonica">
            </TextView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="50dp"

                app:cardElevation="20dp"
                app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/sgm_logo">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:text="SGM is a forum which took responsibility to help and guide underprivileged children in their education, one of the basic rights of every child. MORE"
                    android:textStyle="bold"
                    android:fontFamily="@font/stylish"
                    android:gravity="center"
                    android:textSize="15dp">

                </TextView>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="General Features"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/aclonica">
            </TextView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="20dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/schedule_viewer"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Schedule"
                                android:gravity="center"
                                android:textColor="@color/buttonred"
                                android:layout_margin="5dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/aclonica">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:fontFamily="@font/stylish"
                                android:textSize="15dp"
                                android:layout_margin="5dp"
                                android:text="Day to Day Responsibility of Teacher as well as Management Team."
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:rippleColor="@color/ripple"
                    android:layout_weight="1"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="20dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/list_teacher"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="List of Members"
                                android:gravity="center"
                                android:textColor="@color/buttonred"
                                android:layout_margin="5dp"
                                android:textSize="15dp"
                                android:fontFamily="@font/aclonica">
                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:fontFamily="@font/stylish"
                                android:textSize="15dp"
                                android:layout_margin="5dp"
                                android:text="Detailed Information About, All The Members of SGM Family."
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Member Features"
                android:layout_marginLeft="20dp"
                android:textSize="18dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/aclonica">
            </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"

            app:rippleColor="@color/ripple"
            android:id="@+id/management"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/teacher1"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:gravity="center"
                        android:textColor="@color/buttonred"
                        android:layout_margin="5dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/aclonica">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/stylish"
                        android:textSize="15dp"
                        android:layout_margin="5dp"
                        android:text="All The Member Required To Login With Their Respective Email and SGM ID."
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>