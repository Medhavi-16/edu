<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sunday_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/give_you_glory"
                android:text="Sunday Activity"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/pacifico"
                android:text="Every sunday 10:00 AM to 11:30 AM at B Blobk "
                android:textColor="@color/buttonred"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/flipper_2"
            >

        </ImageView>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekend interactive classes were held regularly to boost children apart from studies.\n\n
Prizes were awarded as well to encourage them in what they are talented apart from studies."
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:layout_margin="15dp">


    </TextView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>